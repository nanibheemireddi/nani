			<table cellpadding="11">
				<tr>
					<td class="label">Name</td><td>:<input type="text" name="name" placeholder="ex.electronics" required></td>

				</tr>
				<tr>
					<td class="label">Description</td><td>:<input type="text" name="description" placeholder="about category" required></td>
				</tr>
